<%= turbo_frame_tag :checklist_template_menu do%>
  <% if @checklist_templates.present? %>
    <div class="dropdown mb-3 ms-5 w-25">
      <button class="btn btn-secondary dropdown-toggle ms-5" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Templates
      </button>
      <ul class="dropdown-menu dropdown-menu-dark">
        <% if @checklist_templates.present? %>
          <% @checklist_templates.each do |checklist_template| %>
            <li class="text-center">
              <%= link_to checklist_template.name, checklist_template_path(checklist_template, trip_id: @trip),
                  class: "text-decoration-none dropdown-item", data: { turbo_frame: :checklist_template_show } %>
            </li>
          <%end%>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
