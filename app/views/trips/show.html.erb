<!--- NAVBAR --->
  <div id="trip-header-navbar" class="navbar d-flex justify-content-between">
      <div id="trip-text" class="me-3">
        <div id="name">
          <p>TABI</p>
        </div>
        </div>
    <div class="icons" >
    <div class="d-flex justify-content-center">
      <div id="link-home">
          <%= link_to trips_path do %>
            <i class="fa-solid fa-house" style="font-size: 2rem;"></i>
          <% end %>
        </div>
    <div class="menu d-flex align-content-start">
      <%= render "shared/menu"%>
    </div>
    </div>
    </div>
    </div>

<div class="trip-show-container">
  <!-- HEADER -->
<div id="trip-header" class="d-flex justify-content-between">
  <div id="trip-header-title">
    <p><%= @trip.name %> </p>

        <div id="trip-icon-edit">
        <%= link_to edit_trip_path(@trip), style: "font-size: 2rem;" do %>
          <div>
            <i class="fa-regular fa-pen-to-square"></i>
          </div>
        <% end %>
        </div>

        <div id="trip-icon-delete" >
        <%= link_to trip_path(@trip), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, style: "font-size: 2rem;" do %>
          <div>
            <i class="fa-regular fa-trash-alt"></i>
          </div>
        <% end %>
      </div>
      </div>
  <div id="trip-header-dates">
    <p><%= @trip.start_date.strftime("%d-%m-%Y") %> - <%= @trip.formatted_end %></p>
  </div>
</div>
  <!-- CONTENT -->

<div id="trip-container" class="p-3">
  <div id="trip-body-left">

    <ul id="stops-list" class="list-unstyled p-3 d-flex flex-column w-100 ">
      <% @trip.stops.each do |stop|%>
        <%= render "stop", stop: stop %>
      <% end %>
    </ul>
    <%= turbo_frame_tag :new_stop do %>
       <%= link_to "New Stop", new_trip_stop_path(@trip) %>
    <% end %>
  </div>

  <!-- RIGHT BOX -->
    <!-- MAP -->
    <div id="trip-map" style="width: 100%; height:100%;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

    <!-- CALENDAR -->

  </div>
</div>
