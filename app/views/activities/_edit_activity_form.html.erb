<%= turbo_frame_tag :edit_activity do %>
<div id="activity-form" class="d-flex justifiy-content-center p-3">

  <%= simple_form_for [stop, activity] do |f| %>
  <%= f.input :name %>
  <%= f.input :location %>
  <%= f.input :category %>
  <%= f.input :description %>
  <%= f.input :start_date %>

  <div id="activity-form-edit-links" class="d-flex flex-row justify-content-between">
    <div class="mb-3">
      <%= link_to "go back", stop_path(activity.stop),
          data: {turbo_frame: '_top' },
          class: "btn btn-secondary", id: "button-form" %>
    </div>

    <div class="mb-3">
      <%= f.submit "submit", class: "btn btn-primary",
          data: {turbo_frame: '_top' } %>
    </div>
  </div>
  <% end %>
</div>
<% end %>
