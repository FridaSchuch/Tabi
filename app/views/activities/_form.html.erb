<% if action_name == "new" %>

<%# 1st form is for the NEW-Activities-Form %>

  <%= simple_form_for [stop, activity] do |f| %>
  <%= f.input :name %>
  <%= f.input :category, as: :select, collection: ['Food', 'Drinks', 'Art', 'Swimming', 'Memorial', 'Views'], prompt: "pick category" %>
  <%= f.input :description %>
  <%= f.input :start_date %>
  <%= f.input :favorite %>
  <%= f.submit "submit", class: "btn btn-primary" %>
  <% end %>

<% else %>

<%# 2nd form is form the EDIT-Activities-Form %>

  <%= simple_form_for @activity do |f| %>
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :description %>
  <%= f.input :start_date %>
  <%= f.input :favorite %>
  <%= f.submit "submit", class: "btn btn-primary" %>
  <% end %>

<% end %>
