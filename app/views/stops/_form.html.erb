<%= turbo_frame_tag :new_stop do %>

<div class="card d-flex flex-fill align-items-center p-3 rounded-5">
  <%= simple_form_for [@trip, @stop],
    data: {turbo_frame: '_top' } do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>



    <div class="form-inputs">
      <div class="mb-3" id="name">

        <%= f.input :name,
        label: "Stop name",
        class: "form-control",
        placeholder: ""%>

      </div>

      <div class="mb-3" id="start">

        <%= f.input :start_date, as: :string,
          input_html: {
            data: {
              controller: "datepicker"
            }
          } %>

      </div>

      <div class="mb-3" id="end">

        <%= f.input :end_date, as: :string,
          input_html: {
            data: {
              controller: "datepicker"
            }
          } %>

      </div>

      <div class="mb-3" id="name">

        <%= f.input :address,
        label: "Address",
        class: "form-control",
        placeholder: ""%>

      </div>

    </div>

    <div class="form-actions">

      <div class="mb-3">

      <%= f.button :submit,
      class: "btn btn-primary",
      id: "button-form"%>

        </div>

      <div class="mb-3">
        <%= link_to "Back to Trip", trip_path, class: "btn btn-secondary", id: "button-form" %>

      </div>

    </div>



  <% end %>
</div>
<% end %>
