<%= link_to activity_path(activity), class: "text-decoration-none", data: { turbo_frame: :activity_show } do %>
<li class="activity-card d-flex flex-row justify-content-between align-items-center rounded-3 px-3 py-2 mb-3" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" >

    <!-- ACTIVITY NAME -->
  <div class="activity-name flex-grow-1">
    <%= activity.name %>
  </div>


  <!-- ICONS -->
  <div id="activity-icons" class="d-flex">
    <!-- EDIT ICON -->
    <%= link_to edit_activity_path(activity) do %>
      <div class="button">
          <i class="fa-regular fa-pen-to-square"></i>
      </div>
    <% end %>

    <!-- TRASH ICON -->
    <%= link_to activity_path(activity), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <div class="button ms-2">
          <i class="fa-solid fa-trash"></i>
      </div>
    <% end %>

    <!-- FAVORITE ICON -->
    <%= turbo_frame_tag "activity_favorite_#{activity.id}" do%>
      <div class="favorite ms-2">
        <%= link_to favorite_activity_path(activity), data: {turbo_method: :patch} do %>
          <% if activity.favorite %>
            <i class="fa-solid fa-heart"></i>
          <% else %>
            <i class="fa-regular fa-heart"></i>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

</li>
<% end %>
